<!-- Loop over each object in the projects array -->
{{#each blogPosts as |blogPost| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{blogPost.id}}">{{blogPost.title}}</a>
    </h2>
    <p>{{format_date blogPost.date_created}}</p>
    <p>Author: {{blogPost.user.name}} </p>
    <p>
      User ID:
      <!-- Pass needed_funding value to the helper function -->
      <span class=""> {{blogPost.user_id}}</span>

    </p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogPost.entry}}
    </p>
  </div>
</div>
{{/each}}